@model TrueMatch.Models.Data.Post;
<section class="page-header-section style-1" style="background:url(~/assets/images/page-header.jpg)">
    <div class="container">
        <div class="page-header-content">
            <div class="page-header-inner">
                <div class="page-title">
                    <h2>@Model.Email Profile</h2>
                </div>
                <ol class="breadcrumb">
                    <li><a asp-action="Index" asp-controller="Home">Update Your Profile</a></li>
                    <li class="active">Make a Post</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">Create a New Post</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="UserPost" asp-controller="UserProfile" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="Email" value="@Model" />

                        <div class="mb-3">
                            <label for="PostTitle" class="form-label fw-bold">Post Title</label>
                            <input type="text" name="PostTitle" id="PostTitle" class="form-control rounded-3" placeholder="Enter post title" required />
                        </div>

                        <div class="mb-3">
                            <label for="Description" class="form-label fw-bold">Description</label>
                            <textarea name="Description" id="Description" class="form-control rounded-3" rows="4" placeholder="Write something interesting..." required></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="ImageFile" class="form-label fw-bold">Upload an Image</label>
                            <input type="file" name="ImageFile" id="ImageFile" class="form-control rounded-3" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-5 rounded-pill shadow-sm">Publish Post</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
