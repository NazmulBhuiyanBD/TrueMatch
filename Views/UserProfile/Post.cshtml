@model TrueMatch.Models.Data.Post;
<section class="page-header-section style-1" style="background:url(~/assets/images/page-header.jpg)">
    <div class="container">
        <div class="page-header-content">
            <div class="page-header-inner">
                <div class="page-title">
                    <h2>@Model.Email Profile</h2>
                </div>
                <ol class="breadcrumb">
                    <li><a asp-action="Index" asp-controller="Home">Update Your Profile</a></li>
                    <li class="active">Make a Post</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<div class="m-3 p-3">
    <form asp-action="UserPost" asp-controller="UserProfile" method="post" enctype="multipart/form-data" class="container mt-4">
        <input type="hidden" name="Email" value="@Model" />
        <div class="mb-3">
            <label>Post Title</label>
            <input name="PostTitle" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Description</label>
            <textarea name="Description" class="form-control" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label>Profile Image:</label>
            <input type="file" name="ImageFile" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>