@model List<TrueMatch.Models.Data.Account>

@{
    ViewData["Title"] = "My Friends";
}

<section class="page-header-section style-1" style="background:url(~/assets/images/page-header.jpg)">
    <div class="container">
        <div class="page-header-content">
            <div class="page-header-inner">
                <div class="page-title">
                    <h2>My Friends</h2>
                </div>
                <ol class="breadcrumb">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="active">Friend List</li>
                </ol>
            </div>
        </div>
    </div>
</section>

@if (Model != null && Model.Any())
{
    <section class="member-page-section">
        <div class="container">
            <div class="member-wrapper">
                <div class="row g-3 row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 justify-content-center">
                    @foreach (var friend in Model)
                    {
                        <div class="col">
                            <div class="lab-item member-item style-1 style-2">
                                <div class="lab-inner">
                                    <div class="lab-thumb">
                                        <img src="@(!string.IsNullOrEmpty(friend.ProfileImageUrl) ? friend.ProfileImageUrl : "~/assets/images/profile/Profile.png")" alt="Friend Profile" class="img-fluid" />
                                    </div>
                                    <div class="lab-content text-center">
                                        <h6>@friend.FirstName @friend.LastName</h6>
                                        <p class="text-muted">@friend.City</p>
                                        <a class="btn btn-outline-primary btn-sm mt-2" asp-action="FindPartnerProfile" asp-controller="UserProfile" asp-route-email="@friend.Email">
                                            View Profile
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
}
else
{
    <div class="alert alert-info text-center mt-5">You haven't added any friends yet.</div>
}
