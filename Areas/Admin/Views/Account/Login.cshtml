@model TrueMatch.Areas.Admin.AdminAccount

@{
    ViewData["Title"] = "Admin Login";
}
@{
    Layout = "_Layout"; // or Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="login-section padding-tb">
    <div class="container">
        <div class="account-wrapper">
            <h3 class="title">Admin Login</h3>

            <form class="account-form" asp-area="Admin" asp-controller="Account" asp-action="Login" method="post">
                @if (ViewBag.LoginError != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.LoginError
                    </div>
                }
                <div class="form-group">
                    <input type="text" placeholder="UerName" asp-for="UserName" name="UserName" required />
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Password" asp-for="Password" name="Password" required />
                </div>
                <div class="form-group">
                    <button class="d-block lab-btn" type="submit"><span>Login</span></button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}